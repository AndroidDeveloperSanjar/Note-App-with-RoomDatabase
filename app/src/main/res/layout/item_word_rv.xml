<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#EFEBE9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_id_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1)"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/tv_date_and_time_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2/27/2020 5:49 PM"
                android:textSize="19sp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_eng_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_medium"
            android:text="Understand"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_type_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/finger_paint"
            android:text="verb"
            android:textColor="#FF5722"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_translate_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/fira_sans_medium"
            android:text="Tushunmoq"
            android:textColor="#455A64"
            android:textStyle="bold"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>